@model onStorm.Models.loginModel
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutLogin";
}


<style>
    .form-login {
        width: 100%;
        height: 100%;
    }

    #login .container #login-row #login-column #login-box {
        margin-top: 120px;
        max-width: 600px;
        height: 320px;
        border: 1px solid #ebebeb;
        background-color: #f2f2f2;
        border-radius: 10px;
    }

        #login .container #login-row #login-column #login-box #login-form {
            padding: 20px;
        }

            #login .container #login-row #login-column #login-box #login-form #register-link {
                margin-top: -85px;
            }
</style>
<div class="form-login">
    <div id="login">
        <h3 class="text-center text-white pt-5"></h3>
        <div class="container">

            @{
                if( ViewBag.mensagemLogin != null )
                {
                    <div>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ViewBag.mensagemLogin
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                }
            }

            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12 bg-light text-dark">
                        <form id="login-form" asp-action="Index" class="form" method="POST">
                            <h3 class="text-center text-dark">Login</h3>
                            <div class="form-group">
                                <label for="username" class="text-dark">Usuario:</label><br>
                                <input type="text" name="username" asp-for="username" id="username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-dark">Senha:</label><br>
                                <input type="password" name="password" asp-for="password" id="password" class="form-control">
                            </div>
                            <div class="form-group text-right">
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Logar">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

